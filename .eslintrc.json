{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@next/next/no-page-custom-font": "off",
    "@next/next/no-img-element": "off", // ปิดการแจ้งเตือนสำหรับการใช้ <img>
    "react/jsx-key": "off", // ปิดการแจ้งเตือนสำหรับ missing key prop
    "jsx-a11y/role-supports-aria-props": "off" // ปิดการแจ้งเตือน aria-selected
  }

}
